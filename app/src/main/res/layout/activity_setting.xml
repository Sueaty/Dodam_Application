<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.SettingActivity"
    android:background="@color/beige">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Setting"
        android:textColor="@color/purple"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="420dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.324">

        <Button
            android:id="@+id/buttonSettingMain"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/setting_button_customize"
            android:text="홈으로"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSettingBaby"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/setting_button_customize_red"
            android:text="아기 등록"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSettingSetting"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/setting_button_customize"
            android:text="설정"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonHowTo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/setting_button_customize"
            android:text="사용 방법"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>